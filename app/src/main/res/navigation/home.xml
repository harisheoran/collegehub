<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/homeScreen">

    <fragment
        android:id="@+id/homeScreen"
        android:name="com.example.collegehub_beta.ui.home.HomeScreen"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home_screen">
        <action
            android:id="@+id/action_homeScreen_to_chapterScreen"
            app:destination="@id/chapterScreen"
            app:popUpTo="@id/homeScreen" />
    </fragment>
    <fragment
        android:id="@+id/chapterScreen"
        android:name="com.example.collegehub_beta.ui.home.ChapterScreen"
        android:label="Chapters"
        tools:layout="@layout/fragment_chapter_screen" >
        <action
                android:id="@+id/action_chapterScreen_to_PDFViewScreen"
                app:destination="@id/PDFViewScreen"
                app:popUpTo="@id/chapterScreen" />
    </fragment>
    <fragment
            android:id="@+id/PDFViewScreen"
            android:name="com.example.collegehub_beta.ui.home.PDFViewScreen"
            android:label="fragment_p_d_f_view_screen"
            tools:layout="@layout/fragment_p_d_f_view_screen" />
</navigation>