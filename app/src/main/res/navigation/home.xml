<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@id/homeScreen">

    <fragment
        android:id="@+id/homeScreen"
        android:name="com.example.collegehub_beta.ui.home.HomeScreen"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen">
        <action
            android:id="@+id/action_homeScreen_to_chapterScreen"
            app:destination="@id/chapterScreen"
            app:popUpTo="@id/homeScreen" />
    </fragment>
    <fragment
        android:id="@+id/chapterScreen"
        android:name="com.example.collegehub_beta.ui.home.ChapterScreen"
        android:label="fragment_chapter_screen"
        tools:layout="@layout/fragment_chapter_screen" />
    <fragment
        android:id="@+id/userProfileScreen"
        android:name="com.example.collegehub_beta.ui.profile.UserProfileScreen"
        android:label="fragment_user_profile_screen"
        tools:layout="@layout/fragment_user_profile_screen">
        <action
            android:id="@+id/action_userProfileScreen2_to_userProfileEditScreen2"
            app:destination="@id/userProfileEditScreen2"
            app:popUpTo="@id/userProfileScreen" />
    </fragment>
    <fragment
        android:id="@+id/userProfileEditScreen2"
        android:name="com.example.collegehub_beta.ui.profile.UserProfileEditScreen"
        android:label="fragment_user_profile_edit_screen"
        tools:layout="@layout/fragment_user_profile_edit_screen" />
</navigation>