<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedShapeAppearanceOverlayButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    `

    <style name="ripple_effect" parent="">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Profile Section Name View -->
    <style name="profile_section_title_view" parent="">
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Profile Section Image View -->
    <style name="profile_section_image_view" parent="">
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Profile Additional sections Text View -->
    <style name="profile_additional_section_text_view" parent="">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <!-- Profile Additional sections Image View -->
    <style name="profile_additional_section_image_view" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


</resources>